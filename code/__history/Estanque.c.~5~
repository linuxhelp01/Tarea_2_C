// --- 1. CONFIGURACIÓN DE MEDIDAS (Constantes) ---
#define PRISMA_LARGO    2.0
#define PRISMA_ANCHO    2.0
#define PRISMA_ALTO     3.0

#define CILINDRO_RADIO  1.5
#define CILINDRO_ALTO   3.0

// --- 2. VARIABLE GLOBAL (La Pizarra) ---
// Aquí guardaremos el resultado para que el main lo pueda ver
float volumen_total = 0.0;

// --- 3. FUNCIÓN DE SELECCIÓN ---
void seleccionar_estanque() {
   
   // Leemos el Interruptor E0
   // 0 = CERRADO (Conectado a Tierra) -> Queremos PRISMA
   if (input(BTN1) == 0) {
      
      // Cálculo: Largo * Ancho * Alto
      volumen_actual = PRISMA_LARGO * PRISMA_ANCHO * PRISMA_ALTO;
      
   } 
   // 1 = ABIERTO (No tocado) -> Queremos CILINDRO
   else {
      
      // Cálculo: PI * Radio * Radio * Alto
      volumen_actual = 3.1416 * (CILINDRO_RADIO * CILINDRO_RADIO) * CILINDRO_ALTO;
   }
}
